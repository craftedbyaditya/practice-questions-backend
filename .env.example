# Application Settings
NODE_ENV=development # Options: development, production
PORT=3000
HOST=localhost

# Security Settings
CORS_ORIGIN=* # For production, use specific origins like https://yourapp.com
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100 # Max requests per IP during window

# HTTPS (for production)
SSL_KEY_PATH=./certs/key.pem
SSL_CERT_PATH=./certs/cert.pem

# Logging
LOG_LEVEL=info # Options: error, warn, info, http, verbose, debug, silly

# Supabase Database
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-anon-key-or-service-role-key
SUPABASE_JWT_SECRET=optional-jwt-secret-for-auth

# API Services
API_BASE_URL=practice-questions-dev.vercel.app
