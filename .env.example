# Application Settings
NODE_ENV=development # Options: development, test, production
PORT=3000
HOST=localhost

# Security Settings
CORS_ORIGIN=* # For production, use specific origins like https://yourapp.com
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100 # Max requests per IP during window

# HTTPS (for production)
SSL_KEY_PATH=./certs/key.pem
SSL_CERT_PATH=./certs/cert.pem

# Logging
LOG_LEVEL=info # Options: error, warn, info, http, verbose, debug, silly
